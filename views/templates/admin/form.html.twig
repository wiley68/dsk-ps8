{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% form_theme dskPaymentConfigurationForm '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block content %}
    {{ form_start(dskPaymentConfigurationForm) }}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">settings</i> DSK Credit API Конфигурация
        </h3>
        <div class="card-body">
            <div class="form-wrapper">
                {{ form_widget(dskPaymentConfigurationForm) }}
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end">
